{
  "dataset_name": "CPG0016",
  "workflow_phases": [
    "task_analysis"
  ],
  "phases": {
    "task_analysis": {
      "enabled": true,
      "llm_notebook": {
        "split_strategy": "smiles",
        "paths": { 
          "data": "../data/${dataset_name}/CP_data.csv",
          "paper": "../data/${dataset_name}/BBBC036.pdf",
          "preprocess": "../data/${dataset_name}/BBBC036_data_process.ipynb"
        },
        "exec": {
          "timeout_seconds": 360,
          "max_preview_rows": 8,
          "max_preview_cols": 20,
          "pdf_max_pages": 10,
          "force_json_mode": true,
          "save_intermediate": true,
          "allow_errors": false,
          "max_fix_rounds": 3
        },
        "llm": {
          "provider": "yizhan",
          "model": "gemini-3-pro-preview-thinking",
          "base_url": "https://vip.yi-zhan.top/v1",
          "api_key": "sk-bTxDIYUAspAvG0qi18B9Db216a5640D59eE0627333693835",
          "temperature": 0.5,
          "max_tokens": 20480,
          "top_p": 1,
          "frequency_penalty": 0,
          "presence_penalty": 0
        },
        "multi": {
          "num_runs": 4,
          "enabled": true,
          "max_parallel_workers": 4,
          "name_template": "NB{idx:02d}-seed{seed}",
          "seeds": [
            11,
            22,
            33,
            44
          ],
          "prompt_variants": [
            "focus=robust-scaling; note: emphasize dose effects",
            "focus=pca/clustering; note: plate-holdout discussion",
            "focus=feature-network; note: correlation modules",
            "focus=enrichment; note: volcano + markers"
          ],
          "out_dir": "../results/${dataset_name}/design_analysis",
          "hypergraph_name": "CellScientist-HyperGraph",
          "node_names": [
            "Data Loading & Initial Exploration",
            "Data Patterns",
            "Hidden Information",
            "Innovation Motivation",
            "Experiment & Validation Suggestions"
          ],
          "review": {
            "comment": "This block now only controls reference selection based on heuristics. LLM review and closed-loop are removed.",
            "reference": {
              "enabled": true,
              "export_dir": "../results/${dataset_name}/design_analysis/reference",
              "min_overall": 0.72,
              "export_mode": "best_only",
              "stop_after_export": true,
              "keep_history": true,
              "weights": {
                "scientific": 1.0,
                "novelty": 0.8,
                "reproducibility": 1.2,
                "interpretability": 1.0
              }
            }
          }
        }
      }
    }
  }
}